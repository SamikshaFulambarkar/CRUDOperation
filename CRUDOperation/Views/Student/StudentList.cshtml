@model IEnumerable<CRUDOperation.Models.Student>

@{
    ViewData["Title"] = "StudentList";
}

<h1>StudentList</h1>

<p>
    <a class="btn btn-outline-primary"asp-action="AddStudent">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GraduationDegreeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOJ_Class)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <th>
                    @Html.DisplayNameFor(model => model.CourseName)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GraduationDegreeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOJ_Class)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditStudent", new {  id=item.Id  }) |
                    @Html.ActionLink("Details", "StudentDetails", new {  id=item.Id  }) |
                    @Html.ActionLink("Delete", "DeleteStudent", new { id=item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

